{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES6",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"],
      "@components/*": ["src/client/components/*"],
      "@backend/*": ["src/backend/*"],
      "@images/*": ["src/client/images/*"]
    }
  },
  "include": ["src/**/*"]
}
